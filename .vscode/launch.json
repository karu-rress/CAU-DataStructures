{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C: Run without Debugging",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build C file (Windows)",
            "cwd": "${fileDirname}",
            "program": "C:\\Windows\\System32\\cmd.exe",
            "args": [
                "/k",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "&",
                "pause",
                "&",
                "exit"
            ],
            "environment": [],
            "stopAtEntry": false,
            "externalConsole": true
        },
        {
            "name": "C: Run with Debugging",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build C file (Windows)",
            "cwd": "${fileDirname}",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "environment": [],
            "stopAtEntry": false,
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "C: Run without Debugging (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build C file (Linux)",
            "cwd": "${fileDirname}",
            "program": "/bin/zsh",
            "args": [
                "-c",
                "${fileDirname}\\${fileBasenameNoExtension}",
                ";",
                "pause",
                ";",
                "exit"
            ],
            "environment": [],
            "stopAtEntry": false,
            "externalConsole": true
        },
        {
            "name": "C: Run with Debugging (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build C file",
            "cwd": "${fileDirname}",
            "program": "${fileDirname}\\${fileBasenameNoExtension}",
            "args": [],
            "environment": [],
            "stopAtEntry": false,
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Python: Run without Debugging",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${fileDirname}",
            "program": "${fileDirname}\\${fileBasename}",
            "args": [],
            "console": "externalTerminal"
        },

    ]
}